<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}</title>
    {{ content_for_header }}

    <script>
      // Capture the full URL as early as possible
      console.log("Initial Full URL:", window.location.href);

      document.addEventListener('DOMContentLoaded', function() {
        console.log("Full URL on DOMContentLoaded:", window.location.href);
      });

      window.addEventListener('load', function() {
        console.log("Full URL on window load:", window.location.href);
      });

      document.onreadystatechange = function () {
        if (document.readyState === "interactive") {
          console.log("Full URL on document interactive:", window.location.href);
        }
      };

      // Set up a MutationObserver to catch changes to the location
      const observer = new MutationObserver(() => {
        console.log("Full URL on MutationObserver:", window.location.href);
      });

      observer.observe(document, { childList: true, subtree: true });
    </script>

    <style>
      body {
        margin: 0;
        font-family: system-ui;
        box-sizing: border-box;
        padding: clamp(1em, 5vw, 5em);
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        line-height: 1.5;
      }
      h1 {
        color: inherit;
        font-size: 1em;
      }
      h1 > a {
        text-decoration: none;
        color: inherit;
      }
      p {
        max-width: 65ch;
      }
      footer {
        opacity: 0.55;
      }
      @media (prefers-color-scheme: dark) {
        body {
          color: #a1b8c1;
          background: rgb(33, 33, 33);
        }
        a {
          color: #81a9fe;
        }
        a:visited {
          color: #c691e8;
        }
        h1 > a,
        h1 > a:visited {
          color: #a1b8c1;
        }
      }
    </style>
  </head>
  <body>
    <h1>URL Logging Test</h1>
    <p>Check the console for logged URLs.</p>

    {% if request.path contains "/cart" %}
    <script>
      // Log the URL but do not redirect for /cart/* paths
      console.log("This is the cart page, no redirection will occur.");
    </script>
    {% else %}
    <script>
      // Redirect logic for other pages
      var currentHostname = window.location.hostname;
      var storefrontHostname = "{{ settings.storefront_hostname }}";

      if (currentHostname !== storefrontHostname) {
        var fullUrl = window.location.href;
        var redirectUrl = fullUrl.replace(currentHostname, storefrontHostname);

        console.log("THEME URL:", fullUrl);

        var customRedirectsStr = "{{ settings.custom_redirects | newline_to_br | strip_newlines | replace: ' ', '' }}";
        if (customRedirectsStr) {
          var customRedirects = customRedirectsStr.split('<br/>');

          for (var cri = 0; cri < customRedirects.length; cri += 1) {
            var redirect = customRedirects[cri].split('>');
            var fromPath = redirect[0];
            var toPath = redirect[1];

            if (fromPath && toPath && redirectUrl.startsWith('https://' + storefrontHostname + fromPath)) {
              redirectUrl = redirectUrl.replace(storefrontHostname + fromPath, storefrontHostname + toPath);
              break;
            }
          }
        }

        // Append any necessary query parameters
        redirectUrl = new URL(redirectUrl);

        {%- if settings.integrate_with_customer_accounts and customer != null -%}
          redirectUrl.searchParams.append('logged_in', 'true');

          {%- if customer.current_location != null -%}
            redirectUrl.searchParams.append('company_location_id', '{{ customer.current_location.id }}');
          {%- endif -%}
        {%- endif -%}

        var discountCode = getCookie('discount_code');
        if (discountCode) {
          redirectUrl.searchParams.append("discount", discountCode);
          deleteCookie("discount_code");
        }

        // Perform the redirect
        window.location.replace(redirectUrl);
      }

      function getCookie(name) {
        name = name + '=';
        var decodedCookie = decodeURIComponent(document.cookie);
        var cookies = decodedCookie.split(';');
        for (var i = 0; cookies.length > i; i++) {
          var cookie = cookies[i].trim();
          if (cookie.indexOf(name) === 0) {
            return cookie.substring(name.length, cookie.length);
          }
        }
      }

      function deleteCookie(name) {
        document.cookie = name +'=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
      }
    </script>
    {% endif %}

    {{ content_for_layout }}
  </body>
</html>
